<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    tools:context=".menuSesiones">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/image_curso"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/android"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_titulo_curso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fundamentos de Java"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/text_descripcion_curso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¡Aprende a programar aplicaciones móviles en Android! Es una de las tecnologías más utilizadas para el desarrollo móvil y unas de las más buscadas por los empleadores Tech."
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/text_nivel_dificultad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nivel: Principiante"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/text_duracion_curso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duración: 6 horas"
                    android:textSize="12sp"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>